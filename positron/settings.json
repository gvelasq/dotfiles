{
	// Editor: Enable bracket pair colorization
	"editor.bracketPairColorization.enabled": true,
	// GitLens: Disable GitLens telemetry
	"gitlens.telemetry.enabled": false,
	// Files: Associate .lock files with JSON
	"files.associations": {
		"renv.lock": "json"
	},
	// R: Format on save
	"[r]": {
		"editor.formatOnSave": true
	},
	// Telemetry: Disable telemetry
	"telemetry.telemetryLevel": "off",
	// Workbench: Use Tomorrow Night Bright (R Classic) theme
	"workbench.colorTheme": "Tomorrow Night Bright (R Classic)",
	// Workbench: Disable experiments
	"workbench.enableExperiments": false,
	// Workbench: Use RStudio keybindings
	"workbench.keybindings.rstudioKeybindings": true
}
